<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nekotori.dao.ChatHistoryMapper">
    <resultMap id="BaseResultMap" type="org.nekotori.entity.ChatHistoryDo">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="group_id" jdbcType="BIGINT" property="groupId"/>
        <result column="sender_id" jdbcType="BIGINT" property="senderId"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="is_command" jdbcType="BOOLEAN" property="isCommand"/>
        <result column="time" jdbcType="TIMESTAMP" property="time"/>
    </resultMap>

    <sql id="baseResult">
        id, group_id, sender_id, content, is_command, time
    </sql>

    <insert id="insertChatHistory" parameterType="org.nekotori.entity.ChatHistoryDo">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            select LAST_INSERT_ROWID()
        </selectKey>
        insert into chat_history(id, group_id, sender_id, content,is_command,time)
        values (
            #{id,jdbcType=INTEGER},
            #{groupId,jdbcType=INTEGER},
            #{senderId,jdbcType=INTEGER},
            #{content,jdbcType=VARCHAR},
            #{isCommand,jdbcType=BOOLEAN},
            #{time,jdbcType=TIMESTAMP}
        )
    </insert>
</mapper>